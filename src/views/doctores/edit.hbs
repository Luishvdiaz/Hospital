<div class="container p-3">
    <div class="col-md-9 mx-auto">
        <br>

        <a href="/doctores" class="btn btn-primary btn-lg"> <i class="fa fa-mail-reply" aria-hidden="true"></i> Doctores </a>
    <div >
        <div class="card-body">
            <h3>  Editar doctor</h3>
                            <form action="/doctores/edit/:{{horario.id_doctor}}" method="POST">
                                <div class="form-group">
                                    <h5>Nombre</h5>
                                    <input text="text" value="{{horario.nombre}}" class="form-control btn-lg" name="nombre" placeholder="Nombre" required="true" autofocus><br>
                                </div>
                                <div class="form-group">
                                    <h5>Cédula</h5>
                                    <input text="text" value="{{horario.cedula}}" class="form-control btn-lg" name="cedula" placeholder="Cédula" required="true"><br>
                                </div>
                                <div class="form-group">
                                    <h5>Especialidad</h5>
                                    <input text="text" value="{{horario.especialidad}}" class="form-control btn-lg" name="especialidad" placeholder="Especialidad" required="true"><br>
                                </div>
                                <div class="form-group">
                                    <h5>Teléfono</h5>
                                    <input text="text" value="{{horario.telefono}}" class="form-control btn-lg" name="telefono" placeholder="Teléfono" required="true"><br>
                                </div>
                                <div class="form-group">
                                    <h5>E-mail</h5>
                                    <input text="text" value="{{horario.email}}" class="form-control btn-lg" name="email" placeholder="E-mail" required="true"><br>
                                </div>
                                <div class="form-group">
                                    <h5>Dirección</h5>
                                    <input text="text" value="{{horario.direccion}}" class="form-control btn-lg" name="direccion" placeholder="Dirección" required="true"><br>
                                </div>
                                <div class="form-group">
                                    <h5>Ciudad</h5>
                                    <input text="text" value="{{horario.ciudad}}" class="form-control btn-lg" name="ciudad" placeholder="Ciudad" required="true"><br>
                                </div>
                                <div>
                                    <h5>Horario del doctor: los días {{horario.dia}}, de {{horario.entrada}} a {{horario.salida}}</h5>
                                    <h5>Con el ID: {{horario.horario}}</h5>
                                </div>
                                <hr size="20" />
                                <div>
                                    <h3>Horario</h3><br><a href="/horario/" class="btn btn-info btn-sm" target="_blank"><i  class="fa fa-mail-forward" aria-hidden="true" ></i>Horarios doctores</a>
                                        <h4></h4>
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-hover btn-lg table-striped mb-0 table-sm" width="100%" >
                                                <br>
                                                    <thead>
                                                    <tr>
                                                        {{!-- <th>Selecciona</th> --}}
                                                        <th>ID</th>
                                                        <th>Dia (s)</th>
                                                        <th>Hora de entrada</th>
                                                        <th>Hora de salida</th>
                                                    </tr>
                                                    </thead>
                                                    

                                                    <tbody>
                                                        {{#each horarios}}

                                                        <tr>
                                                        <td>{{id_horario}}</td>
                                                        <td>{{dia}}</td>
                                                        <td>{{entrada}}</td>
                                                        <td>{{salida}}</td>

                                                        {{/each}}
                                                    </tbody>
                                            </table>

                                        </div><br><h4>Cambiar horario del doctor</h4><br>
                                </div>
                                <div class="form-group">
                                        <h5>ID</h5>
                                        <select class="custom-select my-1 mr-sm-2" name="hor" id="inlineFormCustomSelectPref">
                                            {{#each hor}}
                                                <option value="{{id_horario}}">ID: {{id_horario}}, {{dia}} de {{entrada}} a {{salida}}</option>
                                            {{/each}}
                                        </select> 
                                    </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block btn-lg">Guardar doctor</button>
                                </div>
                    </form>
        </div>
    </div>
</div>
</div>
</div>