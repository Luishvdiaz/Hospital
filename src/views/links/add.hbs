<div class="container p-3">
  <div class="row">
    <div class="col-md-2">
        <br>
        <a href="/links" class="btn btn-primary btn-lg"> Productos </a>
    </div>
    <div class="col-md-8 mx-auto">
    <div >
        <div class="card-body">
            <h3>  Añadir productos</h3><br>
                            <form action="/links/add" method="POST">
                                <div class="form-group">
                                    <h5>Nombre</h5>
                                    <input text="text" class="form-control btn-lg" name="nombre_producto" placeholder="Nombre" required="true" autofocus>
                                </div>
                                <div class="form-group">
                                    <h5>Cantidad</h5>
                                    <input type="number" name="cantidad" class="form-control btn-lg" placeholder="Cantidad" required="true">
                                </div>
                                <div class="form-group">
                                    <h5>Tipo</h5>
                                    <input text="text" class="form-control btn-lg" name="tipo" placeholder="Tipo" required="true">
                                </div>
                                <div class="form-group">
                                    <h5>Tamaño</h5>
                                    <input text="text" class="form-control btn-lg" name="tamano" placeholder="Tamaño" required="true">
                                </div>
                                <div class="form-group">
                                    
                                    <button class="btn btn-success btn-block btn-lg">Guardar producto</button>
                                </div>
                    </form>
        </div>
    </div>
</div>
 
</div>
