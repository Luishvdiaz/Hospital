                                    {{/each}} 
                                </div>
                                <div class="form-group">
                                    <br><h5>Tratamiento</h5>
                                    <textarea text="text" class="form-control btn-lg" name="tratamiento"  rows="3" maxlength="255" required="true"></textarea>
                                </div>
                                <div class="form-group">
                                    <br><h5>Fecha y hora de la cita</h5>
                                    <br><h6>Fecha</h6>
                                    <input text="date" type="date" class="form-control btn-lg" name="fecha"  required="true">
                                    <br><h6>Hora</h6>
                                    <input text="time" type="time" class="form-control btn-lg" name="hora"  required="true">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block btn-lg">Guardar cita</button>
                                </div>
                    </form>
        </div>
