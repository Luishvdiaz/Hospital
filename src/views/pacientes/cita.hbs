                            <form action="/pacientes/cita" method="POST">
                                <div class="form-group">
                                    <h5>Doctor</h5>
                                    <select class="custom-select my-1 mr-sm-2" name="doctor" id="inlineFormCustomSelectPref">
                                        {{#each link2}}
                                            <option value="{{id_doctor}}">{{nombre}}</option>
                                        {{/each}}
                                    </select> 
                                </div>
                                <div class="form-group">
                                    <br><h5>Paciente</h5>
