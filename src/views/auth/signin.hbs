<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
<div class="container p-5">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Inicio de sesión</h3>
        </div>
        <div class="card-body">
          <img src="/img/brand.png" alt="Hospital" class="card-img-top mx-auto m-2  w-50">
          <form action="/signin" method="POST">
            <div class="form-group">
              <input type="text" name="username" placeholder="Nick name" class="form-control" required="true" autofocus>
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Contraseña" class="form-control" required="true">
            </div>
            <button class="btn btn-primary btn-block">
              <i class="fa fa-sign-in" aria-hidden="true"></i>  Entrar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>